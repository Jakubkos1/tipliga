<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complay - Gaming Articles & Esports News</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
        }
    </script>
    <script src="/js/theme.js"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-50 dark:bg-gray-900 min-h-screen transition-colors duration-200"
      x-data="{
          get darkMode() {
              return localStorage.getItem('darkMode') === 'true';
          },
          toggleDarkMode() {
              const newValue = !this.darkMode;
              window.setTheme(newValue);
          }
      }">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700 transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-6">
                    <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">üéÆ Complay</a>
                    
                    <!-- Navigation -->
                    <nav class="flex items-center space-x-4">
                        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">Articles</a>
                        <a href="/tipliga" class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">üèÜ TipLiga</a>
                    </nav>
                </div>

                <div class="flex items-center space-x-4">
                    <!-- Dark Mode Toggle -->
                    <button @click="toggleDarkMode()" 
                            class="p-2 text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 transition-colors"
                            :title="darkMode ? 'Switch to light mode' : 'Switch to dark mode'">
                        <svg x-show="!darkMode" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                        </svg>
                        <svg x-show="darkMode" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                        </svg>
                    </button>

                    <% if (user) { %>
                        <div class="flex items-center space-x-3">
                            <% if (user.avatar_url) { %>
                                <img src="<%= user.avatar_url %>" alt="Avatar" class="w-8 h-8 rounded-full">
                            <% } %>
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= user.username %></span>
                            <a href="/logout" class="text-sm bg-red-600 hover:bg-red-700 dark:bg-red-700 dark:hover:bg-red-600 text-white px-3 py-1 rounded-md transition-colors">Logout</a>
                        </div>
                    <% } else { %>
                        <a href="/auth/discord" class="bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-700 dark:hover:bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                            Login with Discord
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Hero Section -->
        <div class="text-center py-8 mb-8">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Welcome to Complay</h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">Your source for gaming articles, esports news, and predictions</p>

            <!-- TipLiga Link -->
            <div class="mt-6">
                <a href="/tipliga" class="inline-flex items-center bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600 text-white px-6 py-3 rounded-lg text-lg font-medium transition-colors">
                    üèÜ Try TipLiga Predictions
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Featured Article (Newest) -->
        <% if (articles && articles.length > 0) { %>
            <div class="mb-12">
                <% const featuredArticle = articles[0]; %>
                <a href="/articles/<%= featuredArticle.id %>" class="block">
                    <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 cursor-pointer">
                        <% if (featuredArticle.image_url) { %>
                            <div class="h-64 md:h-80 bg-cover bg-center" style="background-image: url('<%= featuredArticle.image_url %>')"></div>
                        <% } else { %>
                            <div class="h-64 md:h-80 bg-gradient-to-r from-orange-500 to-yellow-600"></div>
                        <% } %>
                        <div class="p-8">
                            <div class="flex items-center mb-4">
                                <span class="bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200 text-xs font-medium px-2.5 py-0.5 rounded">Featured</span>
                                <span class="text-sm text-gray-500 dark:text-gray-400 ml-4"><%= new Date(featuredArticle.created_at).toLocaleDateString() %></span>
                            </div>
                            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4 hover:text-orange-600 dark:hover:text-orange-400 transition-colors"><%= featuredArticle.title %></h2>
                            <p class="text-lg text-gray-600 dark:text-gray-300 mb-6"><%= featuredArticle.excerpt || featuredArticle.content.substring(0, 200) + '...' %></p>
                        </div>
                    </article>
                </a>
            </div>
        <% } %>

        <!-- Articles Section -->
        <div class="mb-12">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Latest Articles</h2>
                <% if (user && (isAdmin || isModerator)) { %>
                    <a href="/admin/articles" class="bg-green-600 hover:bg-green-700 dark:bg-green-700 dark:hover:bg-green-600 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">
                        ‚úèÔ∏è Write Article
                    </a>
                <% } %>
            </div>

            <% if (articles && articles.length > 1) { %>
                <!-- Older Articles Grid -->
                <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                    <% articles.slice(1).forEach(article => { %>
                        <a href="/articles/<%= article.id %>" class="block">
                            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 cursor-pointer">
                                <% if (article.image_url) { %>
                                    <div class="h-48 bg-cover bg-center" style="background-image: url('<%= article.image_url %>')"></div>
                                <% } else { %>
                                    <div class="h-48 bg-gradient-to-r from-orange-400 to-yellow-500"></div>
                                <% } %>
                                <div class="p-6">
                                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 hover:text-orange-600 dark:hover:text-orange-400 transition-colors"><%= article.title %></h3>
                                    <p class="text-gray-600 dark:text-gray-300 mb-4"><%= article.excerpt || article.content.substring(0, 120) + '...' %></p>
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm text-gray-500 dark:text-gray-400"><%= new Date(article.created_at).toLocaleDateString() %></span>
                                    </div>
                                </div>
                            </article>
                        </a>
                    <% }); %>
                </div>
            <% } else if (!articles || articles.length === 0) { %>
                <!-- No Articles Yet -->
                <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg shadow">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No articles yet</h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-4">Be the first to publish an article!</p>
                    <% if (user && (isAdmin || isModerator)) { %>
                        <a href="/admin/articles" class="bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600 text-white px-6 py-2 rounded-md font-medium transition-colors">
                            Write First Article
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>


    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 mt-12 transition-colors duration-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="grid md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Complay</h3>
                    <p class="text-gray-600 dark:text-gray-300">Your ultimate destination for gaming articles and esports predictions.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="/tipliga" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">TipLiga</a></li>
                        <li><a href="#" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">About</a></li>
                        <li><a href="#" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Connect</h3>
                    <p class="text-gray-600 dark:text-gray-300">Join our community and stay updated with the latest gaming news.</p>
                </div>
            </div>
            <div class="border-t border-gray-200 dark:border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-500 dark:text-gray-400">¬© 2024 Complay. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Analytics -->
    <%- include('partials/analytics') %>
</body>
</html>
