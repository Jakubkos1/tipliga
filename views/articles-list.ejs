                        <span class="text-sm text-gray-600 dark:text-gray-400">V√Ωsledky pro: "<%= search %>"</span>
                        <a href="/articles" class="ml-2 text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">Zru≈°it vyhled√°v√°n√≠</a>
                    </div>
                <% } %>
            </form>
        </div>

        <!-- Results Summary -->
        <div class="mb-6">
            <p class="text-sm text-gray-600 dark:text-gray-400 text-center">
                <% if (search) { %>
                    Nalezeno <%= pagination.totalArticles %> ƒçl√°nk≈Ø pro "<%= search %>"
                <% } else { %>
                    Celkem <%= pagination.totalArticles %> ƒçl√°nk≈Ø
                <% } %>
                <% if (pagination.totalPages > 1) { %>
                    (str√°nka <%= pagination.currentPage %> z <%= pagination.totalPages %>)
                <% } %>
            </p>
        </div>

        <!-- Articles Content -->
        <% if (articles.length === 0) { %>
            <div class="text-center py-12">
                <div class="text-6xl mb-4">üì∞</div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                    <% if (search) { %>
                        ≈Ω√°dn√© ƒçl√°nky nenalezeny
                    <% } else { %>
                        Zat√≠m ≈æ√°dn√© ƒçl√°nky
                    <% } %>
                </h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                    <% if (search) { %>
                        Zkuste jin√© kl√≠ƒçov√© slovo nebo zru≈°te vyhled√°v√°n√≠.
                    <% } else { %>
                        Brzy zde budou k dispozici zaj√≠mav√© ƒçl√°nky!
                    <% } %>
                </p>
                <% if (search) { %>
                    <a href="/articles" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md font-medium transition-colors">
                        Zobrazit v≈°echny ƒçl√°nky
                    </a>
                <% } %>
            </div>
        <% } else { %>
            <!-- Featured Article (First/Latest) -->
            <% if (articles.length > 0 && pagination.currentPage === 1 && !search) { %>
                <div class="mb-12">
                    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">üåü Nejnovƒõj≈°√≠ ƒçl√°nek</h2>
                    <a href="/articles/<%= articles[0].id %>" class="group block">
                        <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-200 overflow-hidden">
                            <% if (articles[0].image_url) { %>
                                <div class="relative h-64 md:h-80 lg:h-96 overflow-hidden">
                                    <img src="<%= articles[0].image_url %>" alt="<%= articles[0].title %>"
                                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-200">
                                    <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
                                    <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
                                        <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-2 group-hover:text-blue-300 transition-colors">
                                            <%= articles[0].title %>
                                        </h1>
                                        <% if (articles[0].excerpt) { %>
                                            <p class="text-lg text-gray-200 mb-3 line-clamp-2">
                                                <%= articles[0].excerpt %>
                                            </p>
                                        <% } %>
                                        <div class="flex items-center text-sm text-gray-300">
                                            <span>
                                                <% if (articles[0].author_name) { %>
                                                    <%= articles[0].author_name %>
                                                <% } else { %>
                                                    Autor
                                                <% } %>
                                            </span>
                                            <span class="mx-2">‚Ä¢</span>
                                            <span>
                                                <%= new Date(articles[0].created_at).toLocaleDateString('cs-CZ') %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="p-8">
                                    <h1 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                        <%= articles[0].title %>
                                    </h1>
                                    <% if (articles[0].excerpt) { %>
                                        <p class="text-lg text-gray-600 dark:text-gray-300 mb-4">
                                            <%= articles[0].excerpt %>
                                        </p>
                                    <% } %>
                                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                                        <span>
                                            <% if (articles[0].author_name) { %>
                                                <%= articles[0].author_name %>
                                            <% } else { %>
